<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containernotif"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/frombitmap"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/img"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textMusicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Sample music name"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#69AADF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textArtistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Sample artist name"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:maxLines="1"
                android:textColor="#69AADF"
                android:ellipsize="end"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/buttonPrev"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/img_next"
            android:rotation="180"
            android:tint="#69AADF"
            tools:ignore="UseAppTint"
            />

        <ImageView
            android:id="@+id/buttonManage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:rotationY="180"
            android:src="@drawable/img_pause"
            android:rotation="180"
            android:tint="#69AADF"
            tools:ignore="UseAppTint"
            />

        <ImageView
            android:id="@+id/buttonNext"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/img_next"
            android:tint="#69AADF"
            tools:ignore="UseAppTint"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/buttonCancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/img_off"
            android:padding="4dp"
            android:tint="#69AADF"
            tools:ignore="UseAppTint" />

    </LinearLayout>

</LinearLayout>

